@model AgileFood.Models.Pedido

@{
    ViewBag.Title = "Adicionar";
}

<h2>Crie seu pedido</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Html.Raw(ViewBag.FornecedorNome)</h4>
        <div style="width: 100%;display: inline-block;">
            @foreach (Tuple<string, string> dia in ViewBag.Cardapio)
            {
                <div class="dia-cardapio col-md-2">
                    <h4>@dia.Item1</h4>
                    @dia.Item2
                </div>
            }
        </div>

        <div id="cardapio-itens" class="col-md-6">
            @{
                if (ViewBag.Marmitex.Count != 0)
                {
                    <h3>Marmitex</h3>
                    <table class="table">
                        @foreach (AgileFood.Models.Produto produto in ViewBag.Marmitex)
                        {
                            <tr>
                                <td>@produto.Nome</td>
                                <td>R$ @produto.Valor</td>
                                <td>@Html.ActionLink("Adicionar", "Adicionar", new { id = produto.Id })</td>
                            </tr>
                        }
                    </table>
                }
            }

            @{
                if (ViewBag.Bebidas.Count != 0)
                {
                    <h3>Bebidas</h3>
                    <table class="table">
                        @foreach (AgileFood.Models.Produto produto in ViewBag.Bebidas)
                        {
                            <tr>
                                <td>@produto.Nome</td>
                                <td>R$ @produto.Valor</td>
                                <td>@Html.ActionLink("Adicionar", "Adicionar", new { id = produto.Id })</td>
                            </tr>
                        }
                    </table>
                }
            }

            @{
                if (ViewBag.Sobremesas.Count != 0)
                {
                    <h3>Sobremesas</h3>
                    <table class="table">
                        @foreach (AgileFood.Models.Produto produto in ViewBag.Sobremesas)
                        {
                            <tr>
                                <td>@produto.Nome</td>
                                <td>R$ @produto.Valor</td>
                                <td>@Html.ActionLink("Adicionar", "Adicionar", new { id = produto.Id })</td>
                            </tr>
                        }
                    </table>
                }
            }

            @{
                if (ViewBag.Outros.Count != 0)
                {
                    <h3>Outros</h3>
                    <table class="table">
                        @foreach (AgileFood.Models.Produto produto in ViewBag.Outros)
                        {
                            <tr>
                                <td>@produto.Nome</td>
                                <td>R$ @produto.Valor</td>
                                <td>@Html.ActionLink("Adicionar", "Adicionar", new { id = produto.Id })</td>
                            </tr>
                        }
                    </table>
                }
            }
        </div>

        <div id="outro" class="col-md-6">

        </div>





        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Observacoes, "Observações", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Observacoes, new { @class = "form-control", @rows = 3, style = "width: 100%" })
                @Html.ValidationMessageFor(model => model.Observacoes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FuncionarioId, "Funcionário", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FuncionarioId", null, htmlAttributes: new { @class = "form-control combobox" })
                @Html.ValidationMessageFor(model => model.FuncionarioId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Pedir" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancelar", "Index")
</div>
