@model IEnumerable<AgileFood.Models.Cardapio>

@{
    ViewBag.Title = "Index";
}

<h2>Cardápios</h2>

<p>
    @Html.ActionLink("Adicionar", "Adicionar")
</p>
<table class="table">
    <tr>
        <th>
            Título
        </th>
        <th>
            Data
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            Segunda-Feira
        </th>
        <th>
            Terça-Feira
        </th>
        <th>
            Quarta-Feira
        </th>
        <th>
            Quinta-Feira
        </th>
        <th>
            Sexta-Feira
        </th>
        <th>
            Sábado
        </th>
        <th>
            Domingo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDeRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SegundaFeira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TercaFeira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuartaFeira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuintaFeira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SextaFeira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sabado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domingo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Deletar", "Deletar", new { id = item.Id })
            </td>
        </tr>
    }

</table>
